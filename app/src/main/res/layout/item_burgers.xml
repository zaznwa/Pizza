<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/burger_container"
        android:layout_width="185dp"
        android:layout_height="229dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/milk"
        android:layout_marginStart="18dp"
        android:paddingTop="15dp">

        <ImageView
            android:id="@+id/burger_img"
            android:layout_width="157dp"
            android:layout_height="147dp"
            android:scaleType="centerCrop"
            android:src="@drawable/burger1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/burger_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chicken Burger"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/burger_img"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/gray"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>